<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             app:layout_behavior="@string/appbar_scrolling_view_behavior"
                                             tools:context=".Controller.Controller.MainActivity"
                                             tools:showIn="@layout/app_bar_main">

    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Please Log In"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp" android:textAlignment="center"
            android:id="@+id/mainChannelName"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/messageTextField"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" android:hint="message:"/>
    <ImageButton
            android:layout_width="35dp"
            android:layout_height="35dp" app:srcCompat="@drawable/ic_menu_send"
            android:id="@+id/sendMessageBtn"
            android:tint="@color/design_default_color_primary" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" android:background="@android:color/transparent"
            android:onClick="sendMessageBtnClicked"/>
    <android.support.v7.widget.RecyclerView
            android:layout_width="395dp"
            android:layout_height="591dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/mainChannelName" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/messageTextField"
            android:id="@+id/messageListView"/>

</android.support.constraint.ConstraintLayout>