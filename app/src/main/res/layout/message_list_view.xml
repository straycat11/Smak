<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp" tools:srcCompat="@drawable/dark19"
            android:id="@+id/messageUserImage" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/messageUserNameLaber" tools:text="utku" app:layout_constraintStart_toEndOf="@+id/messageUserImage"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/timeStampLabel" tools:text="mar 11, 10:30 PM"
            app:layout_constraintStart_toEndOf="@+id/messageUserNameLaber" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/messageBodyLabel"
            tools:text="bok bok kaka kak akaa kaa. bok bok kaka kak akaa kaa, bok bok kaka kak akaa kaa. bok bok kaka kak akaa kaa. bok bok kaka kak akaa kaa. bok bok kaka kak akaa kaa. bok kaka kak akaa kaa, bok kaka kak akaa kaa."
            app:layout_constraintStart_toEndOf="@+id/messageUserImage" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/timeStampLabel"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>